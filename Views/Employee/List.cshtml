@model IEnumerable<ZeroHungerAssignment.Database.Employee>

@{
    ViewBag.Title = "List";
}

<h2 style="text-align:center">List of All Employees</h2>

<p>
    @Html.ActionLink("Add New Employee", "AddEmployees")
</p>
@if (TempData["Msg"] != null)
{
    <p class="alert alert-info">@TempData["Msg"]</p>
}

<p>

    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td class="btn btn-success">
                    @Html.ActionLink("Update", "EditEmployee", new { id = item.Id })
                </td>
                @*@@Html.ActionLink("Details", "Details", new { id = item.Id })*@
                <td class="btn btn-danger">
                    @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
